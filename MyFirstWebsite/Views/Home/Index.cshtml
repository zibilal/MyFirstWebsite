@model MyFirstWebsite.Models.List
@{
    ViewBag.Title = "Index";
    var username = User.Identity.Name;
}

<h2>@username's List</h2>

@using (Html.BeginForm())
{
    <span>Enter new item:</span>
    @Html.TextBoxFor(u=>u.Details)
    <span>Public post?</span>@Html.CheckBoxFor(u=>u.Check_Public)<br/>
    <input type="submit" value="Add Item"/>
}

<br/>
<table class="table table-bordered table-condensed">
    <thead>
    <tr>
        <th style="text-align: center;">Id</th>
        <th style="text-align: center;">Details</th>
        <th style="text-align: center;">Time - Date Posted</th>
        <th style="text-align: center;">Time - Date Edited</th>
        <th style="text-align: center;">Edit</th>
        <th style="text-align: center;">Delete</th>
        <th style="text-align: center;">Public Post</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td style="text-align: center;"></td>
        <td style="text-align: center;"></td>
        <td style="text-align: center;"></td>
        <td style="text-align: center;"></td>
        <td style="text-align: center;"><a href="@Url.Action("Edit", "Home")">Edit</a></td>
        <td style="text-align: center;"><a href="@Url.Action("Delete", "Home")">Delete</a></td>
        <td style="text-align: center;"></td>
    </tr>
    </tbody>
</table>

